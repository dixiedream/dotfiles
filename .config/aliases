# Common alias file

# AwesomeWM
alias \
    awesome-config="$EDITOR $HOME/.config/awesome/rc.lua" \
    awesome-theme-config="$EDITOR $HOME/.config/awesome/theme.lua"

alias \
    bton="sudo systemctl start bluetooth" \
    btoff="sudo systemctl stop bluetooth"

# Copying and moving
alias \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="rm -vI" \
    mkdir="mkdir -pv"

# Debian stuff
alias \
    poweroff="systemctl poweroff" \
    reboot="systemctl reboot"

# Listing and random coloring
alias \
    df='df -h' \
    ls='ls --color=auto' \
    ll='ls -lh --color=auto' \
    grep="grep --color=auto" \
    diff="diff --color"

# Dotfiles config
alias config="git --git-dir=$HOME/.cfg/ --work-tree=$HOME"

# Docker
alias \
    dockeron="sudo systemctl start docker" \
    dockeroff="sudo systemctl stop docker && sudo systemctl stop docker.socket" \
    dc="docker compose"

# Git
alias \
    ga="git add ." \
    gs="git status" \
    gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit" \
    commit="git commit -m" \
    pushu="git push -u origin"

# Grub
alias \
    grubedit="sudo $EDITOR /etc/default/grub" \
    grubsave="sudo grub-mkconfig -o /boot/grub/grub.cfg"

# Pacman & AUR
alias \
    u="archupdate" \
    a="yay -Syu"

# Download .m3u8 video streams
# https://stackoverflow.com/questions/32528595/ffmpeg-mp4-from-http-live-streaming-m3u8-file
streamDownload() {
    filename="${2:-movie}"
    ffmpeg -i "$1" -c copy -bsf:a aac_adtstoasc "$filename".mp4
}

# Trash
alias trash-empty="rm -rf ~/.local/share/Trash/*"

# Neovim
alias \
    vim="nvim" \
    visudo="sudo EDITOR=$EDITOR visudo"

# Virtualbox
alias \
    vboxOn="sudo modprobe vboxdrv && sudo modprobe vboxnetadp && sudo modprobe vboxnetflt" \
    virtOn="sudo systemctl start libvirtd && sudo virsh net-start default" \
    virtOff="sudo systemctl stop libvirtd && sudo virsh net-destroy default"

# Xorg
alias xorgreload="xrdb -load $HOME/.config/Xresources"
