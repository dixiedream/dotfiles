### Global stuff
default_border none
default_floating_border none
font monospace 9
gaps inner 3

### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $browser firefox
set $fileManager alacritty -e lf
set $menu bemenu-run -i -p ">" --fn monospace --tb "#24283b" --fb "#24283b" --ab "#24283b" --nb "#24283b" --hb "#7aa2f7" --tf "#7aa2f7" --ff "#7aa2f7" --af "#7aa2f7" --nf "#7aa2f7" --hf "#24283b" --cf "#7aa2f7"

### Output configuration
# You can get the names of your outputs by running: swaymsg -t get_outputs
output * bg ~/.cache/bg fill

### Idle configuration
exec swayidle -w \
        timeout 300 'swaylock -f' \
        timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
        before-sleep 'swaylock -f'

### Input configuration
input * {
    xkb_layout "it"
    xkb_options "ctrl:nocaps"
}

input type:touchpad {
    tap enabled
}

### Key bindings
bindsym $mod+Return exec $term
bindsym $mod+q exec $browser
bindsym $mod+n exec $fileManager
bindsym $mod+d exec $menu

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym Alt+Up exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Alt+Down exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym Alt+m exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86AudioPlay exec playerctl play-pause
bindsym Ctrl+Alt+Up exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym Ctrl+Alt+Right exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym Ctrl+Alt+Left exec playerctl previous
bindsym XF86Search exec $menu
bindsym Print exec screenshot
bindsym $mod+Alt+l exec swaylock -f
bindsym $mod+p exec wdisplays
bindsym $mod+Shift+d exec dunstctl history-pop

floating_modifier $mod normal

bindsym $mod+Shift+c kill
bindsym $mod+Ctrl+r reload
bindsym $mod+Shift+q exec swaymsg exit

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Tab focus next
bindsym $mod+Ctrl+Return move left


# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Layout stuff:
bindsym $mod+f fullscreen
bindsym $mod+space floating toggle

# Resizing containers:
bindsym Alt+Shift+$left resize shrink width 30px
bindsym Alt+Shift+$right resize grow width 30px


# Status Bar:
bar {
  position top
  status_command i3status-rs
  colors {
    background #24283b
    statusline #c0caf5
    focused_workspace #7aa2f7 #7aa2f7 #24283b
    active_workspace #1a1b26 #1a1b26 #ffffff
    inactive_workspace #1a1b26 #1a1b26 #565f89
    urgent_workspace #f7768e #f7768e #24283b
  }
}

# Other execs
# Screen sharing fix
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
# Notification daemon
exec dunst
# Multi monitor daemon
exec_always kanshi
exec_always import-gsettings

include @sysconfdir@/sway/config.d/*
