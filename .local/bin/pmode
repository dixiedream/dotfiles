#!/bin/sh

toggle=${1:-on}

if [ "$toggle" = "on" ] ;
then
    xset s off -dpms && \
    notify-send "Presentation Mode" "Set to ON" && \
    dunstctl close-all && \
    dunstctl set-paused true
else
    xset s on dpms && \
    dunstctl set-paused false && \
    notify-send "Presentation Mode" "Set to OFF"
fi
